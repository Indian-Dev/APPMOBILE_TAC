<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTabBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="enableLink">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
    </style>

    <style name="disableLink">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
    </style>

    <style name="verifiedInfo">
        <item name="android:text">@string/statusVerified</item>
        <item name="android:drawableStart">@drawable/ic_check</item>
    </style>

    <style name="notVerifiedInfo">
        <item name="android:text">@string/statusNotVerified</item>
        <item name="android:drawableStart">@drawable/ic_not_check_24</item>
    </style>



</resources>